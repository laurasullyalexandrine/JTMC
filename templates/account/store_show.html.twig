{% extends 'base.html.twig' %}
{% block title %} Fiche du commerce {% endblock %}
{% block menu %}{% endblock %}
{% block body %}

<h2>Le commerce {{store.name}}</h2>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ store.id }}</td>
        </tr>
        <tr>
            <th>Store_activity</th>
            <td>{{ store.storeActivity }}</td>
        </tr>
        <tr>
            <th>Picture</th>
            <td><img src="{{ asset('uploads/' ~ store.picture ) }}" width="200px" /></td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ store.name }}</td>
        </tr>
        <tr>
            <th>Siret</th>
            <td>{{ store.siret }}</td>
        </tr>
        <tr>
            <th>Road_number</th>
            <td>{{ store.roadNumber }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ store.address }}</td>
        </tr>
        <tr>
            <th>Postal_code</th>
            <td>{{ store.postalCode }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ store.city }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ store.email }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ store.phone }}</td>
        </tr>
        <tr>
            <th>Website</th>
            <td>{{ store.website }}</td>
        </tr>
        <tr>
            <th>Open_hours</th>
            <td>{{ store.openHours }}</td>
        </tr>
        <tr>
            {% for days in store.OpenDays %}
            <th>Open_days</th>
            <td>{{ days }}</td>
            {% endfor %}
        </tr>
            {% for payments in store.InformationPayment %}
            <th>Payment information</th>
            <td>{{payments}}</td>
            {% endfor %}
        <tr>
        </tr>
            {% for services in store.CommercialService %}
            <th>Commercial information</th>
            <td>{{services}}</td>
            {% endfor %}
        <tr>
            <th>Description</th>
            <td>{{ store.description }}</td>
        </tr>
    </tbody>
</table>
<a href="{{ path('account_store') }}">Retour</a>

{% endblock %}
