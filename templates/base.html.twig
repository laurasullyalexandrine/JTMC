<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}J'Trouve Mon Commerçant{% endblock %}</title>
  <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
  <link rel="stylesheet" href="{{ asset('css/reset.css') }}" />
  <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css2?family=Lato&family=Montserrat&family=Oswald&family=Roboto&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css"
    integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ=="
    crossorigin="" />
  {% block stylesheets %}
  {% endblock %}
</head>

<body>
  <header class="header-nav">

    <!--Block logo-->
    <div class="logo">
      <!--Logo for the sreen desktop-->
      <a class="logo-link" href="{{ path('home') }}">
        <img class="logo-web" src="/images/logo_jtmc_v2.png" width="120" alt="logo_jtmc">

        <!--Small logo for the screen mobile-->
        <img class="logo-mobile" src="/images/logo_jtmc_small_v2.png" width="100px" alt="logo_jtmc">
      </a>
      <a class="title-link" href="{{ path('home') }}">
        <h1 class="title"> J' Trouve mon commerçant</h1>
      </a>
    </div>

    <div class="slogan-nav">
      <!--Block slogan-->
      <p class="slogan">Retrouvez en quelques clics vos commerces locaux !</p>

      <!--Block navigation-->
      <nav class="header-nav-top">
        <ul class="header-nav-top-list">

          <a href="{{ path('home') }}"><img src="/images/home.png" width="30px " alt="icon-home"></a>
          <li class="header-nav-top-item">
            <a class="header-nav-top-link {% block menu_home %} {% endblock %}" href="{{ path('home') }}">accueil</a>
          </li>

          {% if app.user %}
          <!--If user connected else display button my account and button logount-->
          <a href="{{ path('app_login')}}"><img src="/images/account.png" width="30px " alt="icon-account"></a>
          <li class="header-nav-top-item">
            <a class="header-nav-top-link {% block menu_account %} {% endblock %}" href="{{ path('app_login')}}">Mon compte</a>
          </li>

          <a href="{{ path('app_logout')}}"><img src="/images/logout.png" width="30px " alt="icon-logout"></a>
          <li class="header-nav-top-item">
            <a class="header-nav-top-link" href="{{ path('app_logout')}}">Déconnexion</a>
          </li>

          {% else %}
           <!--else display button login and register-->
          <a href="{{ path('app_login')}}"><img src="/images/logout.png" width="30px " alt="icon-login"></a>
          <li class="header-nav-top-item">
            <a class="header-nav-top-link {% block menu_login %} {% endblock %}" href="{{ path('app_login')}}">Connexion</a>
          </li>

          <a href="{{ path('register')}}"><img id="alert-register" src="/images/register.png" width="25px " alt="icon-inscription"></a>
          <li class="header-nav-top-item">
            <a class="header-nav-top-link {% block menu_register %} {% endblock %}" href="{{ path('register')}}">Inscription</a>
          </li>

          {% endif %}
          <!--<a href="{{ path('store_index')}}"><img src="/images/store.png" width="35px "alt="icon-store"></a>
          <li class="header-nav-top-item">
          <a class="header-nav-top-link" href="{{ path('store_index')}}">Nos commerçants</a>
          </li>-->

          {% if is_granted ('ROLE_ADMIN') %}
          <!--if user has a role admin else display button administration this control access is determined in file security.yaml-->
          <a href="/admin" target="_blank"><img src="/images/admin.png" width="30px " alt="icon-administration"></a>
          <li class="header-nav-top-item">
            <a class="header-nav-top-link-admin" href="/admin" target="_blank">Administration</a>
          </li>
          {% endif %}
        </ul>
      </nav>
    </div>

  </header>

{# display every flash message available #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}


  {% block menu %}


  <main class="wrapper">
   
    <div class="hamburger">

      <!--Respnsive Button-->
      <button class="hamburger-button">&#9776;</button>
      <!--Search Engine-->
        <div class="search-engine">
              <form class="form-search-engine" action="{{path('home')}}" method="post">
              
                <div class="form-search-engine-city">
                  <label for="city" class="search-city">Quelle ville ?</label><br>
                  <input type="text" name="city" placeholder="Code Postal / Ville" />
                  <button class="submit"> Par ici ! </button><br>
                  <a href="{{ path('home',{reset: "1"})}}" class="menu-search-link">
                  <img src="https://img.icons8.com/windows/32/000000/cancel.png" width="25px" alt="shop-icon" />&ensp; Supprimer le filtre</a>
                </div>
              </form>
        </div>

      <!--Select filters-->
          <div class="hamburger-sidebar sidebar">
