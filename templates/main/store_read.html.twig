{% extends 'base.html.twig' %}


{% block title %}J'Trouve Mon Commerçant{% endblock %}
{% block menu %}{% endblock %}
{% block body %}

    <div class="container-store">
    <div class="container-picture"> <img src="{{ asset('uploads/' ~ store.picture ) }}" width="980px" /></div>
    
    <div class="store-information">
      <h1 class="title-store"><strong>{{store.name}}</strong></h1>

      <h2 class="subtitle-store"><strong>{{store.storeActivity}}</strong></h2>

      <p class="adress-store">{{ store.roadNumber }},&ensp;  {{store.address}}</p>
      <p class="adress-store">{{store.postalcode}} {{store.city}}</p>
      <p class="adress-store">Tel : 0{{store.phone}}</p>
      <p class="adress-store">Site internet : {{store.website}}</p>
      <a class="adress-store-email" href="mailto:">{{store.email}}</a>

      <div class="opening">
        <h2 class="subtitle-store"><strong>Jours et horaires d'ouvertures :</strong> </h2>
       
        {#{% for day in days %}
        <p class="days-hours">
        {{ store.days }}
        </p>
        {% endfor %}#}

        <p class="days-hours">
        {{ store.openHours }}
        </p>
      </div>

      <div class="information-payment">
        <h2 class="subtitle-store"><strong>Mode de paiement accepté :</strong> </h2>
        
        {#{% for payment in payments %}
        <p class="payment">
        {{payment.paymentTypes}}
        </p>
        {% endfor %}#}

      </div>

      <div class="commercial-service">
        <h2 class="subtitle-store"><strong>Service commercial proposé :</strong> </h2>
        
        {#{% for service in services %}
        <p class="service">
        {{service.serviceTypes}}
        </p>
        {% endfor %}#}

      </div>
      <div class="description">{{store.description}}</div>
    </div>
     <a class="button-back" href="{{ path('home') }}">Retour</a>
    </div>

     
{% endblock %}